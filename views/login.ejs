        <div id="submit" class="input-box">
              <p style="text-align: center;">CONTINUE</p>
        </div>
      </form>
        <div class="option">or Connect With Social Media</div>
        <div class="google">
          <a href="#"><i class="fab fa-Twitter"></i>Sign in With google</a>
        </div>
    </div>
